<% include ../partials/header %>

<div class="ui main raised very padded text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>">
            <div class="content">
                <p><em>Posted on: <span><%= blog.created.toDateString() %></span></em></p>
            </div>
            <hr>
            <div class="description">
                <p><%- blog.body %></p>
            </div>
            <hr>
            <a class="ui orange basic button" href="/blogs/<%=blog._id%>/edit">Edit</a>
            <form class="delete-form" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
            <a class="ui blue basic button" href="/blogs">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>